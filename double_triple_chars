def has_triple_and_double(strings):
    for s in strings:
        has_triple = False
        has_double = False
        prev = None
        count = 0
        for c in s:
            if c == prev:
                print(prev)
                count += 1
                if count == 3:
                    has_triple = True
                elif count == 2 and (prev != s[0] or len(s) == 2 or prev != s[2]):
                    has_double = True
            else:
                count = 1
            prev = c
						
        if has_triple and has_double:
            return True
    return False

strings = ["aabbcc", "abba"]
print(has_triple_and_double(strings)) # returns True